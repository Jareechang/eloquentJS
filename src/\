import ANCESTRY_FILE from './ancestry.js';

var ancestry = JSON.parse(ANCESTRY_FILE);

/**
 *  compute the average age difference between mothers and childrens
 */

var byName = {};

ancestry.forEach(p => byName[p.name] = p);

// calcuate age

var calculateAge = function(p) {
    return !!p ? (p.died - p.born) : null;
}

var hasMother = p => !! p.mother;
var personWithMother = ancestry => ancestry.filter(hasMother);

var total = personWithMother.length;

console.log(personWithMother(ancestry));

